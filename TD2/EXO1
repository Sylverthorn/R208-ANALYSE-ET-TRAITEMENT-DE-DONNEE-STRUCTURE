import sys


def divise1(a:float, b:float)->float:
    c = a/b
    return c

def main():
    
    try:
        a = float(input("saisir a : "))
        b = float(input("saisir b : "))
        
        c = divise1(a, b)
        print(f"-- La division de {a} par {b} donne {c} --")
    except ZeroDivisionError as e:
        divise2(a,b,e)
    except ValueError:
        divise3()

